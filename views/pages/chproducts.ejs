<div class="container-fluid">

    <form method="post" action="/">
        <h2 class="text-md-center">Productos: </h2>
        <% for(let prod of products){ %>
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6 form-group" style="margin-top: 0.2rem">
                    <button type="submit" class="btn btn-outline-danger btn-lg" id="Producto"> <%- prod.name %></button>
                </div>
                <div class="col-lg-3"></div>
            </div>
        <% } %>
    </form>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <a class="btn btn-info" href="/newproduct">New Product</a>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>




