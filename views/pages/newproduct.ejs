<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="post" action="/newproduct">
                <div class="form-group">
                    <label for="Product">Producto:</label>
                    <input type="text" class="form-control" id="Product" name="product" placeholder="Producto">
                </div>
                <div class="form-group">
                    <label for="Cost">Precio:</label>
                    <input type="number" class="form-control" id="Cost" name="price" placeholder="Precio del producto" min="0">
                </div>
                <div class="form-group">
                    <label for="Stock">Stock:</label>
                    <input type="number" class="form-control" id="Stock" name="stock" placeholder="Stock del producto" min="0">
                </div>
                <button type="submit" class="btn btn-outline-success">Submit</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
